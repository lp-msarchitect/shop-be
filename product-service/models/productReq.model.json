{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Product Schema",
  "required": ["title"],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "imageUrl": {
      "type": "string",
      "format": "uri"
    },
    "price": {
      "type": "number",
      "minimum": 0.5
    },
    "count": {
      "type": "integer",
      "default": 0,
      "minimum": 0
    }
  }
}
